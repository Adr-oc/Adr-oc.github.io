---
// No props needed for this component as it's specific to the hero section
---

<div class="scroll-animate stagger-3 flex justify-center lg:justify-end">
	<div class="relative w-64 h-64 sm:w-80 sm:h-80 lg:w-96 lg:h-96 hero-visual">
		<div class="absolute inset-0 bg-gradient-to-br from-[var(--accent-color)] to-[var(--accent-hover)] rounded-full opacity-20 blur-3xl animate-pulse"></div>
		<div class="relative w-full h-full bg-gradient-to-br from-[var(--overlay-color)] to-[var(--bg-color)] rounded-full border-2 border-[var(--border-color)] flex items-center justify-center shadow-[0_8px_32px_var(--shadow-color)]">
			<div class="text-center space-y-4">
				<img 
					id="hero-logo" 
					src="/dark_icon_adroc.svg" 
					alt="logo adroc developer" 
					class="w-full h-full object-contain drop-shadow-[0_0_8px_var(--accent-color)]"
				/>
			</div>
		</div>
	</div>
</div>
