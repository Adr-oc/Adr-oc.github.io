---
// Contact form component with form fields and styling
---

<div class="scroll-animate stagger-3">
	<div class="p-6 lg:p-8 bg-[var(--bg-color)] rounded-xl border border-[var(--border-color)] shadow-[0_8px_32px_var(--shadow-color)]">
		<h3 class="text-xl lg:text-2xl font-bold text-[var(--text-color)] font-brand mb-6">
			Send me a <span class="text-[var(--accent-color)]">Message</span>
		</h3>
		
		<form class="space-y-4">
			<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
				<div>
					<label class="block text-sm font-medium text-[var(--text-color)] mb-2">Name</label>
					<input 
						type="text" 
						class="w-full px-4 py-3 bg-[var(--overlay-color)] border border-[var(--border-color)] rounded-lg text-[var(--text-color)] focus:outline-none focus:ring-2 focus:drop-shadow-[0_0_8px_var(--accent-color)] focus:ring-[var(--accent-color)] transition-all duration-300" 
						placeholder="Your name"
						required
					/>
				</div>
				<div>
					<label class="block text-sm font-medium text-[var(--text-color)] mb-2">Email</label>
					<input 
						type="email" 
						class="w-full px-4 py-3 bg-[var(--overlay-color)] border border-[var(--border-color)] rounded-lg text-[var(--text-color)] focus:outline-none focus:ring-2 focus:drop-shadow-[0_0_8px_var(--accent-color)] focus:ring-[var(--accent-color)] transition-all duration-300" 
						placeholder="your@email.com"
						required
					/>
				</div>
			</div>
			
			<div>
				<label class="block text-sm font-medium text-[var(--text-color)] mb-2">Subject</label>
				<input 
					type="text" 
					class="w-full px-4 py-3 bg-[var(--overlay-color)] border border-[var(--border-color)] rounded-lg text-[var(--text-color)] focus:outline-none focus:ring-2 focus:drop-shadow-[0_0_8px_var(--accent-color)] focus:ring-[var(--accent-color)] transition-all duration-300" 
					placeholder="Project discussion"
					required
				/>
			</div>
			
			<div>
				<label class="block text-sm font-medium text-[var(--text-color)] mb-2">Message</label>
				<textarea 
					rows="4" 
					class="w-full px-4 py-3 bg-[var(--overlay-color)] border border-[var(--border-color)] rounded-lg text-[var(--text-color)] focus:outline-none focus:ring-2 focus:drop-shadow-[0_0_8px_var(--accent-color)] focus:ring-[var(--accent-color)] transition-all duration-300 resize-none" 
					placeholder="Tell me about your project..."
					required
				></textarea>
			</div>
			
			<button 
				type="submit" 
				class="cta-button w-full px-6 py-3 bg-[var(--accent-color)] text-[var(--accent-text)] font-medium font-brand rounded-lg transition-all duration-300 ease-in-out hover:bg-[var(--accent-hover)] hover:transform hover:scale-[1.02] hover:shadow-[0_4px_20px_var(--shadow-color)]"
			>
				Send Message
			</button>
		</form>
	</div>
</div>
